{
  "compilerOptions": {
    "target": "ES2015",
    "lib": ["ES2016"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./src",
    "rootDir": "./root",
  },
  "include": ["root/**/*.ts"],
  "exclude": ["node_modules"]
}